<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CV19.Resources.Styles"
                    xmlns:fa="http://schemas.fontawesome.com/icons/">
    <Style x:Key="BtnBaseStyle" TargetType="ButtonBase">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style x:Key="PrimaryBtnStyle" TargetType="Button" BasedOn="{StaticResource BtnBaseStyle}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="DangerBtnStyle" TargetType="Button" BasedOn="{StaticResource BtnBaseStyle}">
        <Setter Property="Background" Value="Red" />
        <Setter Property="Foreground" Value="White" />
    </Style>



    <!--<SolidColorBrush x:Key="Button.Static.Background" Color="White"/>
    <SolidColorBrush x:Key="Button.Static.Border" Color="Black"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="DarkBlue"/>
    <SolidColorBrush x:Key="Button.MouseOver.Border" Color="White"/>
