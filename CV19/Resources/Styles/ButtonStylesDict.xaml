<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CV19.Resources.Styles">
    <Style x:Key="BtnBaseStyle" TargetType="ButtonBase">
        <Setter Property="Background" Value="White" />
    </Style>

    <Style x:Key="PrimaryBtnStyle" TargetType="Button" BasedOn="{StaticResource BtnBaseStyle}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="DangerBtnStyle" TargetType="Button" BasedOn="{StaticResource BtnBaseStyle}">
        <Setter Property="Background" Value="Red" />
        <Setter Property="Foreground" Value="White" />
    </Style>
</ResourceDictionary>